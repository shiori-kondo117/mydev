<HTML>
<HEAD>
<title>Ｔｒ種別コード[事案サブ]検索</title>
   <HTA:APPLICATION ID="oHTA"
    APPLICATIONNAME="DEFINES検索"
   >
   <SCRIPT LANGUAGE="VBScript">
Const adOpenStatic = 3
Const adLockOptimistic = 3
Const adCmdText = &H0001

On Error Resume Next

Private Sub cmd_Click(byVal p_strType)

	Set objConnection = CreateObject("ADODB.Connection")
	Set objRecordSet = CreateObject("ADODB.Recordset")

'//	strDBPath = "\\pc-lavie01\home\kondo\sample-code\ado\Access\sample.mdb"

'//	strConnStr = "Provider=Microsoft.Jet.OLEDB.4.0;Data Source=" & _
'//						strDBPath & ";"
'//	objConnection.Open strConnStr
'//	strPathtoTextFile = "C:\home\kondo\ＡＬＳＯＫ\ＧＣシステム\91.ドキュメント管理\"
	strPathtoTextFile = "\\pc-lavie01\home\kondo\ＡＬＳＯＫ\ＧＣシステム\91.ドキュメント管理\"

	objConnection.Open "Provider=Microsoft.Jet.OLEDB.4.0;" & _
	          "Data Source=" & strPathtoTextFile & ";" & _
	          "Extended Properties=""text;HDR=YES;FMT=Delimited"""

	strKeyword = KEYWORD.value
	strTableName = "ＴＲ種別コード_事案サブ.txt"	'-- csvfile
'//	strTableName = "L_ＴＲ種別コード_事案サブ"		'-- MDB link
'//	strTableName = "T_ＴＲ種別コード_事案サブ"		'-- MDB table
	

	If (p_strType = "Search") Then
		strSQL = "SELECT * FROM " & _
				strTableName & " " & _
				"where " & _
				"定義名 like '%" & _
				strKeyword & "%' " & _
				"order by 値"
	Else
		strSQL = "SELECT * FROM " & _
				strTableName & " " & _
				"order by 値"
	End If
	TEXT_DATA.innerText = strSQL

	objRecordset.Open strSQL, _
	          objConnection, adOpenStatic, adLockOptimistic, adCmdText

	strHTML="<table border='1' cellspacing='0'>" & vbCrLf & _
		"<tr style='background-color:skyblue;'>" & _
		"<th nowrap>定義名</th>" & _
		"<th nowrap>ＴＲ種別コード</th>" & _
		"<th nowrap>コメント</th>" & _
		"<th nowrap>分類</th>" & _
		"</tr>"
	If (objRecordset.RecordCount > 999) Then
		'//Msgbox "レコード件数が1000件を超えています。" & _
		'//"rec-cnt=" & objRecordset.RecordCount
	End If

	RecCnt=0

	Do Until (objRecordset.EOF)
		strField_1 = objRecordset.Fields.Item("定義名")
		strField_2 = objRecordset.Fields.Item("値")
		strField_3 = objRecordset.Fields.Item("コメント")
		strField_4 = objRecordset.Fields.Item("分類")
		strHTML = strHTML & _
			"<tr>" & vbCrLf

	    strHTML = strHTML & _
			"<td nowrap>" & strField_1 & "<br/>" & "</td>" & _
			"<td nowrap>" & strField_2 & "<br/>" & "</td>" & _
			"<td nowrap>" & strField_3 & "<br/>" & "</td>" & _
			"<td nowrap>" & strField_4 & "<br/>" & "</td>"

		strHTML = strHTML & _
			"</tr>" & vbCrLf

	    objRecordset.MoveNext
		RecCnt = RecCnt + 1
	Loop
	RESULT.innerHTML = strHTML

	Set objRecordSet = Nothing
	Set objConnection = Nothing
End Sub
Private Sub cmdClear_Click
	KEYWORD.value = ""
End Sub
	   </SCRIPT>
</HEAD>
<BODY onLoad="cmd_Click 'List'">
<label name="KEYWORD">Ｔｒ種別コード:</label>
<input type="text" name="KEYWORD" size="40"/>
<button onClick="cmd_Click 'Search'">検索</button>|
<button onClick="cmdClear_Click">クリア</button>
<hr/>
<div id="RESULT"></div>
<hr/>
SQL文:<br/>
<textarea id="TEXT_DATA" rows="5" cols="80"></textarea>
</BODY>
</HTML>
